<%= form_with url: "/teams/#{@team.id}", method: :patch, local: true do |form| %>

<%= form.label :name %>
<%= form.text_field :name%>
<%= form.label :city %>
<%= form.text_field :city%>
<%= form.label :wins %>
<%= form.number_field :wins%>
<%= form.label :losses %>
<%= form.number_field :losses%>
<%= form.radio_button :playoffs, true%>
<%= form.label "playoff team" %>
<%= form.radio_button :playoffs, false%>
<%= form.label "not a playoff team" %>


<%= form.submit "Update Team" %>
<% end %>
